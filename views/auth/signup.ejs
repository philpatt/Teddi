
<div class="signCont">
	<header class="signupHeader">sign up</header>
	<div id="signupPage">	
		<div class="row">
			<div class='col-xs-12'>
				<form method='post' action='/auth/signup'>
					<div class="form-group">
						<label>First Name:</label>
						<input type="text" name="firstname" class="input form-control" placeholder="First Name">
					</div>
					<div class="form-group">
						<label>Last Name:</label>
						<input type="text" name="lastname" class="input form-control" placeholder="Last Name">
					</div>
					<div class="form-group">
						<label>Email:</label>
						<input type="text" name="email" class="input form-control" placeholder="Your email">
					</div>
					<div class="form-group">
						<label>Password:</label>
						<input type="password" name="password" class="input form-control" placeholder="Your password">
					</div>
					<div class="form-group">
						<label>Password Verification:</label>
						<input type="password" name="passwordVerify" class="input form-control" placeholder="Your password">
					</div>	
					<input type="submit" value='Sign Up' class='btn btn-success'>
				</form>
			</div>
		</div>
	</div>

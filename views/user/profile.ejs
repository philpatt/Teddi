
<div class="cont">
	<header class="signupHeader">sign up</header>
	<div id="signupPage">	
		<div class="row">
			<div class='col-xs-12'>
				<form method='post' action='/auth/signup'>
					<div class="form-group">
						<label>First Name:</label>
						<input type="text" name="firstname" class="form-control" placeholder="First Name">
					</div>
					<div class="form-group">
						<label>Last Name:</label>
						<input type="text" name="lastname" class="form-control" placeholder="Last Name">
					</div>
					<div class="form-group">
						<label>Email:</label>
						<input type="text" name="email" class="form-control" placeholder="Your email">
					</div>
					<div class="form-group">
						<label>Password:</label>
						<input type="password" name="password" class="form-control" placeholder="Your password">
					</div>
					<div class="form-group">
						<label>Password Verification:</label>
						<input type="password" name="passwordVerify" class="form-control" placeholder="Your password">
					</div>	
					<input type="submit" value='Sign Up' class='btn btn-success'>
				</form>
			</div>
		</div>
	</div>
	<div id="signupPage2">	
		<div class="row">
			<div class='col-xs-12'>
<div class='col-xs-4'>
	<h2>Hey there, <%= currentUser.firstname %> !</h2>
	<hr>
	<% user.parks.forEach(function(item){ %>
		<div class=" text-center">
			<ul class='info well'>
				<h3><%= item.fullName %></h3>
				<p><%= item.description %></p>
			</ul>
			<form method="POST" id='search-form' action="/show/show">
				<input hidden type="text" name="parkname" value="<%= item.parkname %>">
				<input hidden name='parkCode' type="text" value="<%= item.parkCode %>">
				<button type="text">More Details</button>
			</form>
	   			<a href ='/favorites/<%= item.id %>' class='btn btn-danger delete-link'>remove from favorites</a>


		</div>
		<hr>
		<% }); %>
</div>


			</div>
		</div>
	</div>
</div>
